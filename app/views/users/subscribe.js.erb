$('#subscribe-progress').modal('close');
<% if @user.username.present? %>
  $('span.username').html('<b>(' + '<%= @user.username %>' + ')</b>');
<% end %>
$('#subscribe-' + '<%= @flash %>').modal('open');

<% if @flash == 'success' %>
  setInterval(function() {
    timeLeft = parseInt($('span#time-left').text());
    if (timeLeft > 1) {
      $('span#time-left').text(timeLeft - 1);
    } else {
      window.location = "/";
    }
  }, 1000);
<% end %>
